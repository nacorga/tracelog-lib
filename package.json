{
  "name": "@tracelog/sdk",
  "description": "JavaScript library for web analytics and real-time event tracking",
  "license": "MIT",
  "version": "0.0.1",
  "main": "./dist/cjs/public-api.js",
  "module": "./dist/esm/public-api.js",
  "types": "./dist/esm/public-api.d.ts",
  "files": [
    "dist/esm",
    "dist/cjs",
    "dist/browser"
  ],
  "exports": {
    "import": "./dist/esm/public-api.js",
    "require": "./dist/cjs/public-api.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npx tsc",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:browser": "NODE_ENV=production vite build",
    "build:browser:production": "NODE_ENV=production vite build",
    "build:browser:testing": "NODE_ENV=e2e vite build",
    "build:all": "npm run build:esm && npm run build:cjs && npm run build:browser:production",
    "build-ugly": "npm run build:all && find dist -name '*.js' -exec npx uglify-js {} -o {} --compress --mangle --toplevel \\;",
    "build-ugly:win": "npm run build:all && Get-ChildItem -Path dist -Recurse -Filter *.js | ForEach-Object { npx uglify-js $_.FullName -o $_.FullName --compress --mangle --toplevel }",
    "lint": "npx eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint:fix": "npx eslint \"src/**/*.ts\" \"tests/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*{.ts,.js,.html,.css,.json,.md}\" \"scripts/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*{.ts,.js,.html,.css,.json,.md}\" \"scripts/**/*.js\"",
    "check": "npm run lint && npm run format:check",
    "fix": "npm run lint:fix && npm run format",
    "serve:test": "http-server tests/fixtures -p 3000 --cors",
    "test:e2e": "npm run build:browser:testing && cp dist/browser/tracelog.js tests/fixtures/tracelog.js && NODE_ENV=e2e playwright test",
    "performance:benchmark": "node scripts/extract-performance-data.js",
    "prepare": "husky",
    "release": "node scripts/release.js",
    "release:patch": "node scripts/release.js --force-version $(node -p \"const v=require('./package.json').version.split('.').map(Number); v[2]++; v.join('.')\")",
    "release:minor": "node scripts/release.js --force-version $(node -p \"const v=require('./package.json').version.split('.').map(Number); v[1]++; v[2]=0; v.join('.')\")",
    "release:major": "node scripts/release.js --force-version $(node -p \"const v=require('./package.json').version.split('.').map(Number); v[0]++; v[1]=0; v[2]=0; v.join('.')\")",
    "release:dry-run": "node scripts/release.js --dry-run",
    "changelog:generate": "node scripts/generate-changelog.js --full",
    "changelog:preview": "node scripts/generate-changelog.js --dry-run"
  },
  "dependencies": {
    "web-vitals": "^4.2.4"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "commitlint": "^19.8.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.3.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.36.0",
    "uglify-js": "^3.19.3",
    "vite": "^7.0.4"
  }
}
